{
    "compilerOptions": {
        // "outDir": "dist/commonjs",
        "module": "CommonJS",
        "target": "ES5",
        "lib": ["ES6", "DOM"],
        "sourceMap": true,
        "allowJs": false,
        "declaration": true,
        "jsx": "react",
        "moduleResolution": "Node",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": false,
        "baseUrl": ".",
        "esModuleInterop": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "es"
    ]
}